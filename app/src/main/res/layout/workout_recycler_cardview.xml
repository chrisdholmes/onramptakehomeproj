<?xml version="1.0" encoding="utf-8"?>
<!-- Material Component (3/5) -->
<android.support.design.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_margin="@dimen/mtrl_card_margin"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/mtrl_card_margin"
    android:backgroundTint="@color/colorPrimary">
   <TextView
       android:layout_width="16dp"
       android:layout_height="wrap_content"
       android:layout_gravity="end"
       android:id="@+id/menuOptionsTextView"
       android:textColor="@color/black"
       android:text="&#8942;"
       android:layout_margin="8dp"
       android:textAppearance="?android:textAppearanceLarge"/>

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="24dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:id="@+id/workOutDateText"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:background="@color/colorPrimary"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:id="@+id/workOutNameText"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:background="@color/colorPrimary"/>

        <TextView
            android:id="@+id/slotOne"
            android:textColor="@color/black"
            android:scrollbars="vertical"
            android:lines="15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </TextView>



    </android.support.v7.widget.LinearLayoutCompat>


</android.support.design.card.MaterialCardView>